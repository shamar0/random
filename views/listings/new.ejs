<% layout("/layouts/boilerplate") %>
<body>
    <div style="padding: 2rem;" class="row offset-1 ">
        <form method="post" action="/listings" class="needs-validation"  novalidate enctype="multipart/form-data">
            <div class="mb-3 col-10">
                <label for="title" class="form-label form-label-edit_new"><b>Title</b></label>
                <input name="listing[title]"  type="text" class="form-control" id="title" placeholder="Enter title" required >
              </div>
            <div class="mb-3 col-10">
                <label for="description" class="form-label form-label-edit_new"><b>Description</b></label>
                <input name="listing[description]" type="text" class="form-control" id="description" placeholder="Enter a catchy description about your place" required >
              </div>
              <div class="mb-3 col-5">
                <label for="inputState" class="form-label form-label-edit_new"><b>Category</b></label>
                <select id="inputState" name="listing[category]" class="form-select">
                  <option selected>Choose Category</option>
                  <option>Rooms</option>
                  <option>Mountains</option>
                  <option>Pools</option>
                  <option>Arctic</option>
                  <option>Farm</option>
                  <option>Beach</option>
                  <option>Lakes</option>
                  <option>Hiking</option>
                </select>
              </div>

            <div class="mb-3 col-10">
                <label for="description" class="form-label form-label-edit_new"><b>Upload Image</b></label>
                <input name="listing[image]"  type="file" class="form-control" id="image" >
              </div>
              <div class="row ">
                  <div class="mb-3 col-lg-3 col-md-3">
                      <label for="price" class="form-label form-label-edit_new"><b>Price</b></label>
                      <input name="listing[price]"  type="text" class="form-control" id="price" placeholder="Enter price" required>
                    </div>
                    <div class="mb-3 col-lg-7 col-md-7 ">
                        <label for="country" class="form-label form-label-edit_new"><b>Country</b></label>
                        <input name="listing[country]"  type="text" class="form-control" id="country" placeholder="Enter country's name" required >
                      </div>
                </div>
                <div class="mb-3 col-10">
                    <label for="location" class="form-label form-label-edit_new"><b>Location</b></label>
                    <input name="listing[location]"  type="text" class="form-control" id="location" placeholder="Enter location" required >
                  </div>
            <button style="background-color: #fe424d; margin-top: 1.8rem;" class="btn btn-primary">Add this</button>
        </form>
    </div>
   
</body>
